{
  "name": "fe-phaser-poc-isometric-rpg",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A proof of concept for an isometric RPG game using Phaser and TypeScript.",
  "keywords": [
    "phaser",
    "typescript",
    "isometric",
    "rpg",
    "game development",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/5h1ngy/fe-phaser-poc-isometric-rpg.git"
  },
  "author": "5h1ngy",
  "engines": {
    "node": ">=20.18.0",
    "yarn": ">=4.5.1"
  },
  "packageManager": "yarn@4.5.1",
  "type": "module",
  "scripts": {
    "start:mock": "vite --host 0.0.0.0 --port 5173 --mode mock",
    "start:dev": "vite --host 0.0.0.0 --port 5173 --mode dev",
    "start:prod": "vite preview --host 0.0.0.0 --port 5174 --mode prod --outDir build/fe-phaser-poc-isometric-rpg",
    "build:prod": "tsc -b && vite build --mode prod --outDir build/fe-phaser-poc-isometric-rpg",
    "clean": "rm -rfdv build node_modules .yarn .yarn-cache",
    "update": "yarn up '*@latest'"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.5",
    "gsap": "^3.12.5",
    "phaser": "^3.87.0",
    "typescript": "~5.7.2",
    "vite": "^6.0.5",
    "vite-tsconfig-paths": "^5.1.3"
  }
}
